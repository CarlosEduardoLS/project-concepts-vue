ex}`\"\n        class=\"task-item\"\n        :class=\"{ 'line-through': task.isDone }\"\n        @dblclick=\"complete(task)\"\n      >\n        {{ task.name }}\n        <button @click=\"remove(task)\">&times;</button>\n      </li>\n    </ul>\n    <p v-else>Lista de tarefas escondidas</p>\n  </div>\n</template>\n\n<script>\nconst focus = {\n  inserted: el => {\n    el.focus()\n  },\n}\n\nexport default {\n  directives: {\n    focus,\n  },\n  data: () => ({\n    currentTask: '',\n    showList: false,\n    tasks: [{ name: 'Fazer o curso', isDone: false }],\n  }),\n  methods: {\n    handleShowHideList() {\n      this.showList = !this.showList\n    },\n    addTask() {\n      this.tasks.push({ name: this.currentTask, isDone: false })\n      this.currentTask = ''\n    },\n    complete(task) {\n      this.tasks = this.tasks.map(t => {\n        if (t.name === task.name) return { ...t, isDone: !t.isDone }\n        return { ...t }\n      })\n    },\n    remove(task) {\n      this.tasks = this.tasks.filter(t => t.name !== task.name)\n    },\n  },\n}\n</script>\n\n<style scoped>\n.line-through {\n  text-decoration: line-through;\n  color: lightgreen;\n}\n.task-item {\n  cursor: pointer;\n}\n</style>\n"]}]}